<div class="incident-form-container" data-controller="address-autocomplete" data-address-autocomplete-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  <div class="form-card">
    <%= link_to :back do %>
      <i class="fas fa-arrow-left"></i>
    <% end %>
    <div>
      <h1><%= @alert.new_record? ? "Nouvelle Alerte" : "Modifier l'Alerte" %></h1>
      <%= simple_form_for @alert do |f| %>
        <div id="mapbox-geocoder-container"></div>
        <%= f.input :address,
                    label: "Adresse",
                    input_html: {
                      class: "address-autocomplete",
                      autocomplete: "off",
                      data: { address_autocomplete_target: "address" }
                    } %>
        <%= f.input :radius, label: "Rayon (km)", input_html: { min: 1, value: 10 } %>
        <%= f.submit @alert.new_record? ? "Créer l'alerte" : "Mettre à jour", class: "btn btn-submit-temp" %>
      <% end %>
    </div>
  </div>
</div>
