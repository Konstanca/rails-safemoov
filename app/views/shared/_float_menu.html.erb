<div class="fab fabVertical" data-controller="float-menu"> <!-- Sans "active" -->
  <div class="fabTrigger" data-float-menu-target="trigger" data-action="click->float-menu#toggle">
    <a href="#">
    <% if user_signed_in? && current_user.photo.attached? %>
        <%= cl_image_tag current_user.photo.key,
        alt: "Avatar",
              width: 40,
              height: 40,
              crop: :thumb,
              gravity: :face,
              radius: :max,
              zoom: 1.3,
              class: "avatar" %>
      <% else %>
        <span class="icon"></span>
      <% end %>
    </a>
  </div>
  <div class="fabNav fabNav--down">
    <% if user_signed_in? %>
      <%= link_to my_incidents_incidents_path, class: "fabItem" do %>
        <span class="fabTooltip">Mes incidents (<%= current_user.incidents.count %>)</span>
        <i class="fa-solid fa-rectangle-list"></i>
      <% end %>

      <%= link_to edit_user_registration_path, class: "fabItem" do %>
        <span class="fabTooltip">Editer mon profil</span>
        <i class="fa-solid fa-user-pen"></i>
      <% end %>

      <%= link_to destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" do %>
        <span class="fabTooltip">Se d√©connecter</span>
        <i class="fa-solid fa-lock"></i>
      <% end %>

    <% else %>
      <%= link_to new_user_session_path, class: "fabItem" do %>
        <span class="fabTooltip">Se connecter</span>
        <i class="fa-solid fa-user"></i>
      <% end %>

      <%= link_to new_user_registration_path, class: "fabItem" do %>
        <span class="fabTooltip">S'inscrire</span>
        <i class="fa-solid fa-user-plus"></i>
      <% end %>
    <% end %>

  </div>
</div>
