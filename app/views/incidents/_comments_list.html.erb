<turbo-frame id="comments_list">
  <% if incident.comments.any? %>
      <% incident.comments.order(created_at: :desc).each do |comment| %>
        <div class="card">
          <strong><%= comment.user.display_name %> :</strong> <%= comment.content %>
          <small><%=comment.created_at.strftime( "%d/%m/%Y Ã  %Hh%M") %></small>
        </div>
      <% end %>
  <% else %>
    <p>Aucun commentaire pour le moment.</p>
  <% end %>
</turbo-frame>
